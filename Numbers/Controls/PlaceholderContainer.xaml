<controls:UserControl
    x:Class="Numbers.Controls.PlaceholderContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="using:System"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:controls1="using:Numbers.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d"
>
    <controls:ItemsControl x:Name="Items" Margin="15">
        <controls:ItemsControl.ItemTemplate>
            <xaml:DataTemplate x:DataType="system:Object">
                <controls1:Shimmer Height="20" Margin="0,0,0,5" HorizontalAlignment="Stretch" />
            </xaml:DataTemplate>
        </controls:ItemsControl.ItemTemplate>
    </controls:ItemsControl>
</controls:UserControl>
